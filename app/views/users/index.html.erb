<div class="container-xxl">
 <h1 class="text-center text-success list">List Users</h1>
  <%= link_to "Add new user", {:action => 'new' } ,class: "btn btn-danger"%>
 <% @users.each do |user| %>
  <div class="card mt-3" >
   <div class="card-body">
    Name : <%= user.name %>
     <%= link_to 'delete', {:action => "destroy",:id => user.id},method: :delete ,class: "btn btn-danger" %>
     <%= link_to 'edit', {:action => "edit",:id => user.id} ,class: "btn btn-info" %>
   </div>
  </div>
<% end %>
</div>
