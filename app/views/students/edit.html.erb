<div>
 <h1>update</h1>
 <h1>Name : <%= @edit.name %></h1>
 <%= form_for @edit, html: {class: "form-horizontal"} do |f| %>
      <div class="form-group">
        <%= f.label :name, "Name", class: "col-md-2 control-label" %>
        <div class="col-md-6">
          <%= f.text_field :name, class: "form-control", placeholder: "Enter user name" %>
        </div>
      </div>
       <div class="form-group">
        <%= f.label :age, "age", class: "col-md-2 control-label" %>
        <div class="col-md-6">
          <%= f.text_field :age, class: "form-control", placeholder: "Enter age" %>
        </div>
      <div class="form-group">
        <%= f.label :gender, "gender", class: "col-md-2 control-label" %>
        <div class="col-md-6">
          <%= f.text_field :gender, class: "form-control", placeholder: "Enter gender" %>
        </div>
      </div>
        <div class="form-group">
        <%= f.label :class_name, "class_name", class: "col-md-2 control-label" %>
        <div class="col-md-6">
          <%= f.text_field :class_name, class: "form-control", placeholder: "Enter class_name" %>
        </div>
      </div>
       
      </div>
      <div class="form-group">
        <div class="col-lg-offset-4">
          <%= f.submit "Register", class: "btn btn-success" %>
        </div>
      </div>
    <% end %>
</div>

    