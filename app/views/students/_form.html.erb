<%= form_for @student do |f| %>

  <div class="form-group">

  <h1>You file</h1>
  <% if @student.avatar.attached? %>
   <%= image_tag @student.avatar, width: 200 %>
   <% else %>
   <%= image_tag "https://encrypted-tbn0.gstatic.com/images?q=tbn:ANd9GcR279ZG6OVawyMz5ZdZOvlKxGlvk27BNb_REjxpEgEv1A&s", width: 200 %>
  <% end %>

   <div class="field">
    <%= f.label "Avatar" %><br />
    <%= f.file_field :avatar %>
  </div>
     
      <%= f.label :name, "Name", class: "col-md-2 control-label" %>
        <div class="col-md-6">
          <%= f.text_field :name, class: "form-control", placeholder: "Enter user name" %>
        </div>
      </div>
      <div class="form-group">
        <%= f.label :age, "age", class: "col-md-2 control-label" %>
        <div class="col-md-6">
          <%= f.text_field :age, class: "form-control", placeholder: "Enter age" %>
        </div>
      </div>
      <div class="form-group">
        <%= f.label :gender, "gender", class: "col-md-2 control-label" %>
        <div class="col-md-6">
          <%= f.text_field :gender, class: "form-control", placeholder: "gender" %>
        </div>
      </div>
       <div class="form-group">
        <%= f.label :class_name, "class_name", class: "col-md-2 control-label" %>
        <div class="col-md-6">
          <%= f.text_field :class_name, class: "form-control", placeholder: "class_name" %>
        </div>
      </div>
  <div>

    <%# <h1>Parent</h1> %>

    <div id="parents">
      <%= f.fields_for :parents do |pt| %>
        <%= render 'parent_fields', f: pt %>
      <% end %>

      <div class="links">
        <%= link_to_add_association 'add parent', f, :parents ,class: "btn btn-success" %>
      </div>
    </div>
  </div>

  <div class="form-group">
      <div class="col-lg-offset-4">
        <%= f.submit "Add student", class: "btn btn-success" %>
      </div>
  </div>
<% end %>
