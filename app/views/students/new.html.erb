<h1>New student</h1>

<div class="row">
  <div class="col-lg-offset-2">
    <%= form_for @student, html: {class: "form-horizontal"} do |f| %>
      <div class="form-group">
        <%= f.label :name, "Name", class: "col-md-2 control-label" %>
        <div class="col-md-6">
          <%= f.text_field :name, class: "form-control", placeholder: "Enter user name" %>
        </div>
      </div>
      <div class="form-group">
        <%= f.label :age, "age", class: "col-md-2 control-label" %>
        <div class="col-md-6">
          <%= f.password_field :age, class: "form-control", placeholder: "Enter age" %>
        </div>
      </div>
      <div class="form-group">
        <%= f.label :gender, "gender", class: "col-md-2 control-label" %>
        <div class="col-md-6">
          <%= f.password_field :gender, class: "form-control", placeholder: "gender" %>
        </div>
      </div>
       <div class="form-group">
        <%= f.label :class_name, "class_name", class: "col-md-2 control-label" %>
        <div class="col-md-6">
          <%= f.password_field :class_name, class: "form-control", placeholder: "class_name" %>
        </div>
      </div>
      <div class="form-group">
        <div class="col-lg-offset-4">
          <%= f.submit "Add student", class: "btn btn-success" %>
        </div>
      </div>
    <% end %>
  </div>
</div>
